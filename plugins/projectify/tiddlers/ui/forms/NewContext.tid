\define lingo-base() $:/language/projectify/

\define add-project-actions()
  <$action-createtiddler
    $basetitle={{$:/state/projectify/new-context!!tag_name}}
    color={{$:/state/projectify/new-context!!color}}
    tags="$:/plugins/nico/projectify/tags/Context"/>
  <$action-setfield
    $tiddler="$:/state/projectify/new-context"
    tag_name=""
    color=""
  />
  <$action-setfield $tiddler="$:/state/projectify/show-new-context-popup" text=""/>
  <$action-sendmessage $message="tm-auto-save-wiki"/>
\end

<div class="py-form">
  <$keyboard key="enter">
    <<add-project-actions>>
    <div class="py-control-group">
      <div class="py-label"><<lingo Context>></div>
      <$edit-text
        class="py-input"
        focus="true"
        tiddler="$:/state/projectify/new-context"
        field="tag_name"
      />
    </div>
    <div class="py-control-group">
      <div class="py-label">{{$:/language/TagManager/Colour/Heading}}</div>
      <$edit-text
        class="py-input"
        tiddler="$:/state/projectify/new-context"
        field="color"
      />
    </div>
  </$keyboard>
  <div class="py-actions">
    <$button class="py-btn btn-primary">
      <<add-project-actions>>
	<<lingo Save/Caption>>
    </$button>
    <<lingo Or>>
    <$button class="py-btn" set="$:/state/projectify/show-new-context-popup" setTo="">
      <<lingo Cancel/Caption>>
    </$button>
  </div>
</div>
